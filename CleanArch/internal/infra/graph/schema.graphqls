type OrderOutput {
  id: ID!
  price: Float!
  tax: Float!
  finalPrice: Float! # Changed to camelCase (GraphQL convention)
}

input OrderInput { # CHANGED: type to input
  id: ID!
  price: Float!
  tax: Float!
}

type Query {
  orders(
    page: Int!
    limit: Int!
    sort: String!
    sortDir: String!
  ): [OrderOutput!]!
}

type Mutation {
  createOrder(input: OrderInput!): OrderOutput!
}
